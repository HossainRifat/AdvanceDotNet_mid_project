
@{
    ViewBag.Title = "Registration";
}

<h2>Registration 1</h2>

<form action="" method="post">

    <label>First Name:</label>
    <input type="text" name="FirstName" value="@(Model!=null? Model.FirstName:"")" class="form-control">
    @Html.ValidationMessage("FirstName")<br />

    <label>Last Name:</label>
    <input type="text" name="LastName" value="@(Model!=null? Model.LastName:"")" class="form-control">
    @Html.ValidationMessage("LastName")<br />

    <label>Date of birth:</label>
    <input type="date" name="Dob" value="@(Model!=null? Model.Dob:"")" class="form-control">
    @Html.ValidationMessage("Dob")<br />

    <label>Phone:</label>
    <input type="tel" name="Phone" value="@(Model!=null? Model.Phone:"")" class="form-control">
    @Html.ValidationMessage("Phone")<br />

    <label>Email:</label>
    <input type="email" name="Email" value="@(Model!=null? Model.Email:"")" class="form-control">
    @Html.ValidationMessage("Email")<br />

    <label>NID number:</label>
    <input type="text" name="Nid" value="@(Model!=null? Model.Nid:"")" class="form-control">
    @Html.ValidationMessage("Nid")<br />

    <label>Parmanent Address:</label>
    <textarea class="form-control" rows="5" name="Address" placeholder="Enter your full address.." value="@(Model!=null? Model.Address:"")"></textarea>
    @Html.ValidationMessage("Address")<br />



    <input type="Submit" class="btn btn-success">

</form>
